{
    "name": "martinlejko/backend",
    "autoload": {
        "psr-4": {
            "Martinlejko\\Backend\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Martin Lejko",
            "email": "Martin.lejko@outlook.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.8",
        "slim/psr7": "^1.4",
        "doctrine/dbal": "^4.2",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.3",
        "vlucas/phpdotenv": "^5.4",
        "webonyx/graphql-php": "^14.0",
        "zircote/swagger-php": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.75"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test:unit": "phpunit --testsuite Unit --testdox",
        "test:integration": "phpunit --testsuite Integration --testdox"
    }
}
